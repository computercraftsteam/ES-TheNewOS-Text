--[[
TheNewOS Text by ComputerCraft'sTeam
Setup pastebin code: C9WSrRv1
]]--
local function get(repoFile,saveTo)
local download = http.get("https://raw.github.com/computercraftsteam/ES-TheNewOS-Text/release/"..repoFile) --This will make 'download' hold the contents of the file.
if download then
   local handle = download.readAll()
   download.close()
   local file = fs.open(saveTo,"w")
   file.write(handle)
   file.close()
  else
   error()
  end
end

term.clear()
term.setCursorPos(1,1)
print("Instalador TheNewOS Text")
print("Copyright (C) 2014 manumanucraft")
print("================================")
print("Descargado y abierto el archivo /setup")
get("startup","/startup")
print("Descargado el archivo /startup")
get("config/os.cfg","/config/os.cfg")
print("Descargado el archivo /config/os.cfg")
get("config/user.cfg","/config/user.cfg")
write("Instalacion terminada. El ordenador se reiniciara en: ")
sleep(1)
write("3")
sleep(1)
write(", 2")
sleep(1)
write(", 1")
sleep(1)
write(", 0")
sleep(1)
os.reboot()
